pipeline {
    agent any

    environment {
        REGISTRY = "registry.digitalocean.com/my-container-registry123"
        IMAGE    = "my-nodeapp"
        TAG      = "${BUILD_NUMBER}"
    }

    stages {
        stage('Build Docker Image') {
            steps {
                sh '''
                  docker build -t $REGISTRY/$IMAGE:$TAG my-nodeapp
                '''
            }
        }

        stage('Docker Login') {
    steps {
        withCredentials([string(credentialsId: 'do-registry-creds', variable: 'DO_TOKEN')]) {
            sh '''
              echo "$DO_TOKEN" | docker login $REGISTRY \
              -u oromovjavoxir@gmail.com --password-stdin
            '''
        }
    }
}


        stage('Push Docker Image') {
            steps {
                sh '''
                  docker push $REGISTRY/$IMAGE:$TAG
                '''
            }
        }
    }

    post {
        always {
            sh 'docker logout $REGISTRY'
        }
    }
}

